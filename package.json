{
  "name": "ai-musicify",
  "version": "0.3.0",
  "type": "module",
  "description": "AI 驱动的歌词创作和音乐辅助工具 - 支持全流程创作、三种创作模式、作曲辅助、导出到 Suno/Tunee",
  "keywords": [
    "lyrics",
    "songwriting",
    "music",
    "ai",
    "content-creation",
    "歌词",
    "作词",
    "音乐创作"
  ],
  "author": "Musicify Team",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "musicify": "dist/cli.js"
  },
  "files": [
    "dist/",
    "scripts/",
    "templates/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.1",
    "ora": "^8.0.1",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wordflowlab/musicify"
  },
  "homepage": "https://github.com/wordflowlab/musicify#readme",
  "bugs": {
    "url": "https://github.com/wordflowlab/musicify/issues"
  }
}
